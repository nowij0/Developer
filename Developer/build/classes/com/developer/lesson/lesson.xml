<select id="selectTutor" resultMap="selectTutorMap">
SELECT 
* FROM lesson l
    INNER JOIN tutor t
    ON l.user_id = t.user_id
    INNER JOIN users u 
    ON t.user_id = u.user_id
    WHERE l.user_id = #{userId}
    AND pay_lesson != 2
</select>

