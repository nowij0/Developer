</resultMap>

<select id="getLessonByUser2" resultMap="lessonList2">
	<include refid="getLessonByUserSql"></include>
and l.start_cdate<![CDATA[<]]><![CDATA[=]]>TO_CHAR(SYSDATE,'yyyymmdd')
