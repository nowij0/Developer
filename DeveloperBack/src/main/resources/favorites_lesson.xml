<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.developer.favoriteslesson">
	<!-- ===== addFavLesson ===== -->
	<insert id="addFavLesson" parameterType="FavoritesLessonVO">
	INSERT INTO favorites_lesson 
	VALUES (fav_les_seq.NEXTVAL, #{userId} , #{lessonSeq})	
	</insert>
	<!-- ===== addFavLesson ===== -->
	
	<!-- ===== delFavLesson ===== -->
	<delete id="delFavLesson" parameterType="int">
	DELETE FROM favorites_lesson
	    WHERE fav_les_seq = #{favLesSeq}
	</delete>
	<!-- ===== delFavLesson ===== -->
</mapper>